// Plain recursion
fun fac(n as i64) -> i64 :=
    if n <= 1 then 1 else n * fac(n - 1)

// Tail-recursion
fun fac_iter(n as i64) -> i64 :=
    fac_iter(n, 1)

fun fac_iter(n as i64, result as i64) -> i64 :=
    if n <= 1 then result else fac_iter(n - 1, n * result)

// Main
call println(fac(5))
call println(fac_iter(5))
